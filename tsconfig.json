{
  "compilerOptions": {
    "target": "ES6", // 選擇要編譯成哪種版本的 JavaScript
    "module": "commonjs",
    "strict": true, // 嚴格模式，啟用後需要指定函數參數的 type
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", // 將編譯過後的js檔放到dist資料夾中
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  // "include": [/* 需要编译的文件 */ "src/**/*.ts"],
  // "exclude": [/* 编译需要排除的文件 */ "node_modules/**"]
}
